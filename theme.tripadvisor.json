{
  "$schema": "./theme.schema.json",
  "name": "TripAdvisor Design System",
  "version": "1.0.0",
  "description": "TripAdvisor inspired design tokens for Shorts Studio",
  "colors": {
    "primary": {
      "green": {
        "50": "#E6F7F1",
        "100": "#B3E5D6",
        "200": "#80D3BB",
        "300": "#4DC1A0",
        "400": "#26B586",
        "500": "#00AA6C",
        "600": "#00915A",
        "700": "#007A4D",
        "800": "#006340",
        "900": "#004D33"
      },
      "black": "#000000",
      "white": "#FFFFFF"
    },
    "neutral": {
      "gray": {
        "50": "#F7F7F7",
        "100": "#E5E5E5",
        "200": "#CCCCCC",
        "300": "#999999",
        "400": "#666666",
        "500": "#333333",
        "600": "#2B2B2B",
        "700": "#222222",
        "800": "#1A1A1A",
        "900": "#111111"
      }
    },
    "semantic": {
      "success": {"default": "#34D399", "light": "#6EE7B7", "dark": "#10B981"},
      "warning": {"default": "#FBBF24", "light": "#FCD34D", "dark": "#F59E0B"},
      "error": {"default": "#EF4444", "light": "#F87171", "dark": "#DC2626"},
      "info": {"default": "#3B82F6", "light": "#60A5FA", "dark": "#2563EB"}
    },
    "kakao": {
      "default": "#FEE500",
      "hover": "#FDD835",
      "text": "#191919"
    }
  },
  "typography": {
    "fontFamily": {
      "base": "'Trip Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "heading": "'Trip Sans Medium', -apple-system, BlinkMacSystemFont, sans-serif",
      "mono": "'SF Mono', Monaco, Consolas, 'Courier New', monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.5rem",
      "2xl": "2rem",
      "3xl": "3rem",
      "4xl": "4rem"
    },
    "fontWeight": {
      "thin": "100",
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800",
      "black": "900"
    },
    "lineHeight": {
      "none": "1",
      "tight": "1.2",
      "snug": "1.375",
      "normal": "1.5",
      "relaxed": "1.75",
      "loose": "2"
    }
  },
  "components": {
    "button": {
      "borderRadius": {
        "default": "24px",
        "sm": "20px",
        "lg": "28px",
        "pill": "9999px"
      },
      "padding": {
        "sm": "8px 16px",
        "md": "12px 24px",
        "lg": "16px 32px"
      },
      "transition": "all 0.2s ease"
    },
    "card": {
      "borderRadius": "12px",
      "padding": {
        "sm": "16px",
        "md": "24px",
        "lg": "32px"
      },
      "shadow": {
        "default": "0 2px 8px rgba(0,0,0,0.08)",
        "hover": "0 4px 12px rgba(0,0,0,0.12)",
        "active": "0 1px 4px rgba(0,0,0,0.06)"
      }
    },
    "input": {
      "borderRadius": "8px",
      "borderWidth": "1px",
      "borderColor": {
        "default": "#E5E5E5",
        "focus": "#00AA6C",
        "error": "#EF4444"
      },
      "height": {
        "sm": "36px",
        "md": "44px",
        "lg": "52px"
      }
    }
  },
  "layout": {
    "container": {
      "maxWidth": "1200px",
      "padding": "24px"
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px"
    }
  },
  "animation": {
    "duration": {
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms"
    },
    "easing": {
      "default": "ease",
      "in": "ease-in",
      "out": "ease-out",
      "inOut": "ease-in-out"
    }
  }
}