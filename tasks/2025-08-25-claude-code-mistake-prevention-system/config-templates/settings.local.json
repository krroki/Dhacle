{
  "hooks": {
    "beforeEdit": "node .claude/watchdog/implementation-details.js pre-edit",
    "afterEdit": "node .claude/watchdog/implementation-details.js post-edit",
    "onError": "node .claude/watchdog/implementation-details.js error"
  },
  "watchdog": {
    "enabled": true,
    "realtime": true,
    "autoFix": false,
    "notificationLevel": "all",
    "checkInterval": 5000,
    "maxHistoryPerFile": 10,
    "patterns": {
      "anyType": true,
      "todoCode": true,
      "emptyFunction": true,
      "sessionCheck": true,
      "deprecatedPattern": true,
      "envDirectAccess": true,
      "snakeCaseMixing": true
    },
    "severity": {
      "critical": ["anyType", "sessionCheck", "autoScript"],
      "high": ["todoCode", "emptyFunction", "deprecatedPattern"],
      "medium": ["envDirectAccess", "snakeCaseMixing"],
      "low": []
    },
    "autoFixPatterns": [],
    "excludePaths": [
      "node_modules",
      ".next",
      ".git",
      "dist",
      "build",
      "coverage",
      "*.test.ts",
      "*.spec.ts"
    ]
  },
  "permissions": {
    "allow": [
      "mcp__sequential-thinking__sequentialthinking",
      "Bash(npm run verify:*)",
      "Bash(npm run types:*)",
      "Bash(npx tsc:*)",
      "Bash(npx biome:*)",
      "Read(/C:\\My_Claude_Project\\9.Dhacle\\**)",
      "mcp__desktop-commander__read_file"
    ],
    "deny": [],
    "ask": [],
    "additionalDirectories": [
      "C:\\My_Claude_Project\\9.Dhacle",
      "C:\\c\\My_Claude_Project\\9.Dhacle"
    ]
  },
  "learning": {
    "enabled": true,
    "updateDocuments": false,
    "weeklyReport": true,
    "patternThreshold": 5,
    "documentUpdateThreshold": 10
  },
  "notifications": {
    "desktop": true,
    "terminal": true,
    "sound": true,
    "criticalOnly": false,
    "groupByFile": true,
    "maxNotificationsPerMinute": 10
  },
  "performance": {
    "throttleMs": 500,
    "maxConcurrentChecks": 5,
    "cacheResults": true,
    "cacheTTL": 60000
  }
}